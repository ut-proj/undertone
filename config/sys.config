[{kernel, [
  {logger, [
    %% Disable the default Kernel handler; see undertone logging below ...
    {handler, default, undefined, #{level => none}}
  ]},
  {logger_level, debug}
 ]},

 {inets, [
    {services, [
        {httpd, [
            {server_name, "undertone_http"},
            {document_root, "priv/www"},
            {server_root, "."},
            {bind_address, {127,0,0,1}},
            {port, 7080},
            {ipfamily, inet},
            {error_log, "logs/httpd-errors.log"},
            {modules, [
                mod_alias,
                mod_actions,
                mod_esi,
                mod_get,
                mod_head,
                mod_log,
                mod_disk_log
            ]},
            {mime_types, [
                {"html","text/html"},
                {"htm","text/html"},
                {"js","text/javascript"},
                {"css","text/css"},
                {"gif","image/gif"},
                {"jpg","image/jpeg"},
                {"jpeg","image/jpeg"},
                {"png","image/png"},
                {"svg","image/svg+xml"}
            ]},
            {erl_script_alias,
                {"/esi", ['undertone.web.api']}
            },
            {erl_script_nocache, true}
        ]}
    ]}
 ]},

 {undertone, [
     {backend, [
         %% General config
         %{name, bevin},
         {name, extempore},
         %{name, supercollider},
         %% Backend-specific configs
         {bevin, [
             {'display-name', "Geert Bevin's"},
             %% XXX it would be nice if we didn't have to hack around this
             %%     can we make the code less fragile?
             {version, "NA"}, % version is computed from CLI tools
             {binary, "NA"}, % two binaries are used for this backend
             {'root-dir', "/opt/bevin/bin/"},
             {'recv-binary', "receivemidi"},
             {'send-binary', "sendmidi"},
             {'manage-binary?', true},
             {'has-client?', false},
             {'banner-render', 'at-start'}
         ]},
         {extempore, [
             {'display-name', "Extempore"},
             {version, "0.8.8"},
             {host, "localhost"},
             {port, 7099},
             {'root-dir', "/opt/extempore/0.8.8/"},
             {binary, "extempore"},
             {'manage-binary?', true},
             {'has-client?', true},
             {'start-client?', true},
             {'banner-render', 'at-connect'}
         ]},
         {supercollider, [
             {'display-name', "SuperCollider"},
             {host, "localhost"}
         ]}
     ]},
     {banner, "text/banner.ascii"},
     {logger, [
         {handler, disk_log, logger_disk_log_h,
            #{config => #{file => "logs/undertone.log",
                          type => wrap,
                          max_no_files => 10,
                          max_no_bytes => 52428800 % 10 x 5mb
                        },
              formatter => {logjam,
                  #{colored => true,
                    time_designator => $\s,
                    time_offset => "",
                    time_unit => second,
                    strip_tz => true,
                    level_capitalize => true
                  }
              }
            }
         }
     ]},
     {osc, [
         {servers, []},
         {clients, [
             {ardour, [
                 {'enabled?', false},
                 {host, "localhost"},
                 {port, 1234}
             ]}
         ]}
     ]},
     {prompt, "lfe> "},
     {repl, [
         {default, extempore},
         {autostart, true},
         {extempore, [
             {banner, "text/extempore-repl-welcome.ascii"},
             %%{prompt, "extempore> "},
             {prompt, "xt> "},
             {'session-table', xtreplsession},
             {'history-table', xtreplhistory}
         ]},
         {undertone, [
             {banner, "text/undertone-repl-welcome.ascii"},
             %%{prompt, "undertone> "},
             {prompt, "ut> "},
             {'session-table', utreplsession},
             {'history-table', utreplhistory}
         ]}
     ]},
     {session, [
         {options, [ordered_set, named_table, public]},
         {'show-max', 50},
         %% XXX delete the following
         {table, replsession}
     ]},
     {history, [
         {options, []}, % These will be Mnesia options
         {'show-max', 100}
     ]}
 ]},
 {'tcp-client', [
     {server, [
         {host, "localhost"},
         {port, 7099},
         {options, [
             {'tcp-opts', [binary, {active, true}, {packet, 0}]},
             {parser, {'xt.msg', 'parse-response'}},
             {reporter, {'xt.msg', report}},
             {'init-backoff', 500}, % in ms
             {'max-backoff', 60000} % in ms
         ]}
     ]}
 ]}
].
