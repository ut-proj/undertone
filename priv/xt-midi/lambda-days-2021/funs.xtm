(define play-chords
  (lambda (beat dur track chords)
    (map (lambda (note)
           (mplay *midiout*
                  note
                  (random-volume)
                  dur
                  track))
         (car chords))
    (callback (*metro* (+ beat (* .5 dur)))
              'play-chords
              (+ beat dur)
              dur
              track
              (cdr chords))))

