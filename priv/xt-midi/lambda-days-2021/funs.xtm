;;;; Performance functions for the Lambda Days 2021 ambient song

;;; Play functions

(define play-seq
  (lambda (beat dur track notes)
    (mplay *midiout*
           (car notes)
           (random-volume)
           dur
           track)
    (callback (*metro* (+ beat (* .5 dur)))
              'play-seq
              (+ beat dur)
              dur
              track
              (cdr notes))))

