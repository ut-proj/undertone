(define play-random
  (lambda (beat dur track chords)
    (map (lambda (note)
           (mplay *midiout*
                  note
                  (random-volume)
                  dur
                  track))
         (car chords))
    (callback (*metro* (+ beat (* .5 dur)))
              'play-random
              (+ beat dur)
              dur
              track
              (cdr chords))))

(define -play-random
  (lambda (beat dur count-down decr track chords)
    (mplay *midiout*
           (random (car chords))
           (random-volume)
           dur
           track)
    (callback (*metro* (+ beat (* .5 dur)))
              '-play-random
              (+ beat dur)
              dur
              count-down
              (if (equal? 0 decr)
                  (- count-down 1)
                  (- decr 1))
              track
              (if (equal? 0 decr)
                  (cdr chords)
                  chords))))

(define play-random
  (lambda (beat dur count-down track chords)
    (-play-random beat dur count-down (- count-down 1) track chords)))

